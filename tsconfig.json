{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Strict mode */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/*"],
      "@schemas/*": ["src/schemas/*"],
      "@app-types/*": ["src/types/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"],
      "@prompts/*": ["src/prompts/*"]
    }
  },
  "include": ["src/renderer/**/*", "src/schemas/**/*", "src/types/**/*", "src/shared/**/*", "src/config/**/*", "src/prompts/**/*"],
  "exclude": ["src/main/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
