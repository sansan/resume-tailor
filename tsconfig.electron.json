{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist-electron",
    "rootDir": ".",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* Strict mode */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@schemas/*": ["src/schemas/*"],
      "@app-types/*": ["src/types/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"],
      "@prompts/*": ["src/prompts/*"]
    }
  },
  "include": ["src/main/**/*", "src/schemas/**/*", "src/types/**/*", "src/shared/**/*", "src/config/**/*", "src/prompts/**/*"]
}
